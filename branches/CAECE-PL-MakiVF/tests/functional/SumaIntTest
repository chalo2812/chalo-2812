var a: integer;
var estadoerror:integer;

procedure TESTIF( b:integer);
var c: integer;
begin
	
	c := a+b;
	
	if 5 = a+b then
	else
		showLN '[TestFalse] - a+b (2+3) debiera ser 5';
		estadoerror := 1;
	end-if;
	
	if c = a+b  then
	else
		showLN '[TestFalse] - a+b (2+3) y c debieran ser 5';
		estadoerror := 1;
	end-if;
	
	if c*5-1 = (a+b)*5-1 then
	else
		showLN '[TestFalse] - error en la condicion if';
		estadoerror := 1;
	end-if;
	
	
end-proc;

procedure MAIN();
var b: integer;
begin
	showLN 'Test funcional de SUMA';
	estadoerror := 0;
	
	a := 2;
	b := 3;
	TESTIF(b);
	
	
  	if estadoerror = 0 then
  		showLN 'TEST OK!';
  	end-if;
  	
end-proc;
