globales
fin-globales;

funcion factorial (n:entero):entero;
	var m,r:entero;	
comenzar
	mostrarln ' ';
	mostrarln'entreee Fac ',n;
	si n==0 entonces
		mostrarln ' ';
		mostrarln'entreee n==0 ',n;
		r:= 1;
	sino
		m:=n-1;
		mostrarln ' ';
		mostrarln'entreee n<>0 ',n, ' ', m;
		r:= n * factorial(m);
	fin-si;
	
	mostrarln ' ';
	mostrarln 'saliiii ',r;
fin-func r;	
		
procedimiento principal();
	var a,z : entero;

comenzar
	mostrar 'Ingrese un numero Entero: ';
	leer a;
	z:=factorial(a);
	mostrarln 'Resultado:';
	mostrarln z;
fin-proc;